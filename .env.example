# =============================================================================
# VERL + LangGraph Multi-Agent Coding Framework Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM API Keys
# =============================================================================
# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here  # Optional
OPENAI_MODEL=gpt-4o-mini  # Default model for code generation

# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022  # Default model for code review

# Local LLM Configuration (Optional)
LOCAL_LLM_ENDPOINT=http://localhost:8000  # For local model serving
LOCAL_LLM_MODEL=qwen2.5-coder-7b-instruct  # Local model name

# =============================================================================
# VERL Configuration
# =============================================================================
# Ray Cluster Configuration
RAY_ADDRESS=http://localhost:8265  # Ray dashboard address
RAY_RUNTIME_ENV_WORKING_DIR=./  # Working directory for Ray workers

# VERL Backend Configuration
VERL_BACKEND=fsdp  # Options: fsdp, megatron
VERL_MODEL_PATH=./models/  # Path to store/load models
VERL_CHECKPOINT_PATH=./checkpoints/  # Path for training checkpoints

# Training Configuration
VERL_BATCH_SIZE=8  # Training batch size
VERL_LEARNING_RATE=1e-5  # Learning rate for RL training
VERL_MAX_STEPS=1000  # Maximum training steps
VERL_SAVE_INTERVAL=100  # Checkpoint save interval

# =============================================================================
# Training and Monitoring
# =============================================================================
# Weights & Biases Configuration
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=coding-framework  # Project name in W&B
WANDB_ENTITY=your_wandb_entity_here  # Your W&B username/team

# Training Data Configuration
TRAINING_DATA_PATH=./data/training_problems  # Path to training data
EVALUATION_DATA_PATH=./data/evaluation_sets  # Path to evaluation data
REWARD_FUNCTION=code_correctness  # Default reward function

# =============================================================================
# Code Execution Environment
# =============================================================================
# Docker Configuration
DOCKER_IMAGE=python:3.9-slim  # Base image for code execution
DOCKER_TIMEOUT=30  # Execution timeout in seconds
DOCKER_MEMORY_LIMIT=512m  # Memory limit for containers
DOCKER_CPU_LIMIT=1  # CPU limit for containers

# Sandbox Configuration
SANDBOX_ENABLED=true  # Enable sandboxed execution
SANDBOX_NETWORK_DISABLED=true  # Disable network access in sandbox
SANDBOX_TMP_DIR=/tmp/coding_framework  # Temporary directory for execution

# =============================================================================
# Agent Configuration
# =============================================================================
# Code Generator Agent
GENERATOR_TEMPERATURE=0.7  # Temperature for code generation
GENERATOR_MAX_TOKENS=2048  # Maximum tokens for generation
GENERATOR_TIMEOUT=60  # Timeout for generation in seconds

# Code Reviewer Agent
REVIEWER_ANALYSIS_DEPTH=detailed  # Options: basic, detailed, comprehensive
REVIEWER_FOCUS_AREAS=correctness,style,security  # Comma-separated focus areas
REVIEWER_TIMEOUT=45  # Timeout for review in seconds

# Code Executor Agent
EXECUTOR_TIMEOUT=30  # Timeout for code execution
EXECUTOR_MAX_OUTPUT_SIZE=10240  # Maximum output size in bytes
EXECUTOR_RETRY_ATTEMPTS=3  # Number of retry attempts on failure

# =============================================================================
# System Configuration
# =============================================================================
# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # Options: json, text
LOG_FILE=./logs/coding_framework.log  # Log file path

# Performance Configuration
MAX_CONCURRENT_AGENTS=4  # Maximum number of concurrent agent instances
CACHE_ENABLED=true  # Enable response caching
CACHE_TTL=3600  # Cache TTL in seconds
CACHE_SIZE=1000  # Maximum cache entries

# Security Configuration
ENABLE_CODE_ANALYSIS=true  # Enable security code analysis
ALLOWED_IMPORTS=os,sys,math,random,json,re,collections,itertools  # Comma-separated
BLOCKED_IMPORTS=subprocess,socket,urllib,requests  # Comma-separated blocked imports

# =============================================================================
# Development Configuration
# =============================================================================
# Development Mode
DEV_MODE=true  # Enable development features
DEBUG_AGENTS=false  # Enable agent debugging
VERBOSE_LOGGING=false  # Enable verbose logging

# Testing Configuration
TEST_DATA_PATH=./tests/data  # Path to test data
MOCK_LLM_RESPONSES=false  # Use mock responses for testing
TEST_TIMEOUT=300  # Test timeout in seconds

# =============================================================================
# Optional Integrations
# =============================================================================
# GitHub Integration (Optional)
GITHUB_TOKEN=your_github_token_here  # For repository access
GITHUB_REPO=your_username/your_repo  # Repository for examples

# Slack Integration (Optional)
SLACK_BOT_TOKEN=your_slack_bot_token_here  # For notifications
SLACK_CHANNEL=#coding-framework  # Channel for notifications

# Database Configuration (Optional)
DATABASE_URL=sqlite:///./coding_framework.db  # Database URL
DB_POOL_SIZE=5  # Database connection pool size

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable specific features
ENABLE_MULTI_TURN=true  # Enable multi-turn conversations
ENABLE_HUMAN_IN_LOOP=false  # Enable human-in-the-loop features
ENABLE_AGENT_MEMORY=true  # Enable agent memory between sessions
ENABLE_CODE_OPTIMIZATION=true  # Enable code optimization suggestions
ENABLE_SECURITY_ANALYSIS=true  # Enable security vulnerability detection

# Experimental Features
EXPERIMENTAL_FEATURES=false  # Enable experimental features
ENABLE_AGENT_LEARNING=false  # Enable online agent learning
ENABLE_COLLABORATIVE_EDITING=false  # Enable real-time collaboration